<?xml version="1.0" encoding="utf-8"?>
<!-- REFACTORIZAR CON MATERIAL DESIGN -->
<com.google.android.material.card.MaterialCardView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="10dp"
    android:layout_margin="4dp"
    android:clickable="true"
    android:focusable="true"
    android:checkable="true"
>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="fitXY"
                    tools:srcCompat="@tools:sample/avatars" />

                <TextView
                    android:id="@+id/nombrePersonaje"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_toRightOf="@+id/imageView"
                    android:text="TextView"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/genero"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_below="@+id/nombrePersonaje"
                    android:layout_alignLeft="@+id/nombrePersonaje"
                    android:layout_alignRight="@+id/nombrePersonaje"

                    android:text="TextView"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/estado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/genero"
                    android:layout_alignLeft="@+id/genero"
                    android:layout_alignRight="@+id/genero"
                    android:layout_marginTop="10dp"
                    android:text="TextView"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="18dp" />

            </RelativeLayout>








</com.google.android.material.card.MaterialCardView>
